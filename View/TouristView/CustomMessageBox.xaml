<Window x:Class="BookingApp.View.TouristView.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookingApp.View.TouristView"
        mc:Ignorable="d"
        Background="GhostWhite"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Title="Success" Height="200" Width="250">
    <Grid>
        <Grid>
            <TextBlock x:Name="MessageText" Text="Your message here" FontSize="16" Margin="0 0 0 20" FontWeight="DemiBold"
                   HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" />
            <Button FontWeight="Bold" Background="White" BorderBrush="Black" Content="OK" Width="50" Height="25" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20"
                Click="OKButton_Click"/>
        </Grid>
    </Grid>
</Window>
